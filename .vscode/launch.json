{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "cortex-debug",
            "request": "launch",
            "name": "Debug J-Link",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/nrf52-lcd-tester-fw.elf",
            "serverpath": "JLinkGDBServerCLExe",
            "serverArgs": [],
            "showDevDebugOutput": "parsed",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            },
            "servertype": "jlink",
            "device": "NRF52840_XXAA",
            "interface": "swd",
            "serialNumber": "", //If you have more than one J-Link probe, add the serial number here.
            "jlinkscript": "${workspaceFolder}/jlink.jlink",
            "runToEntryPoint": "main",
            "armToolchainPath": "/opt/arm-gcc/bin/",
            "svdFile": "/home/dani/projects/tq/lcd-gui-tester/build/libraries/nrf5_sdk/modules/nrfx/mdk/nrf52840.svd",
            "rttConfig": {
                "enabled": true,
                "address": "auto",
                "decoders": [
                    {
                        "label": "RTT Console",
                        "port": 0,
                        "type": "console"
                    }
                ]
            },
            "preLaunchTask": "",
            "preLaunchCommands": [
                "monitor reset halt"
            ],
            "postLaunchCommands": [
                "monitor reset halt",
                "break main"
            ]
        }
    ]
}